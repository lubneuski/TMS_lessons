<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web
     Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>

    <servlet>
        <servlet-name>cars</servlet-name>
        <servlet-class>alex.lu.CarServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>cars</servlet-name>
        <url-pattern>/car</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>log</filter-name>
        <filter-class>alex.lu.CarLogFilter</filter-class>
    </filter>
       <filter-mapping>
       <filter-name>log</filter-name>
       <url-pattern>/car</url-pattern>
   </filter-mapping>
    
    <listener>
        <listener-class>alex.lu.CarListener</listener-class>
    </listener>

</web-app>